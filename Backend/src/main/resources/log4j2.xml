<?xml version="1.0" encoding="UTF-8"?>

<Configuration>
  <Appenders>
    <File name="File" fileName="./logger.log">
      <PatternLayout pattern="%d{HH:mm:ss} [%t] %-5level %C - %msg%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="ALL">
      <AppenderRef ref="File"/>
    </Root>
  </Loggers>
</Configuration>